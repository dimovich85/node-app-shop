<h1>Редактировать курс "{{course.title}}"</h1>
<form action="/courses/edit" method="POST">
    <div class="input-field col s6">
        <input value="{{course.title}}" name="title" id="title" type="text" class="validate" required>
        <label for="title">Название курса</label>
        <span class="helper-text" data-error="Введите название"></span>
    </div>
    <div class="input-field col s6">
        <input value="{{course.price}}" name="price" id="price" type="number" min="1" class="validate" required>
        <label for="price">Цена</label>
        <span class="helper-text" data-error="Введите цену"></span>
    </div>
    <div class="input-field col s6">
        <input value="{{course.img}}" name="img" id="img" type="text" class="validate" required>
        <label for="img">URL картинки</label>
        <span class="helper-text" data-error="Введите URL картинки"></span>
    </div>
    <input type="hidden" name="id" value="{{course.id}}">
    <button type="submit" class="btn btn-primary">Редактировать</button>
</form>